<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ .. \FrameXML\UI.xsd">

	<!-- TEMPLATES -->
	<Frame name="TellMeWhen_GroupTemplate" enableMouse="false" toplevel="true" movable="true" parent="TMW" virtual="true">
		<Size x="1" y="1"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture setAllPoints="true">
					<Color r="0" g="0" b="0" a="0"/>
				</Texture>
			</Layer>
		</Layers>
		<Frames>
			<Button name="$parent_ResizeButton" parentKey="resizeButton">
				<Size x="10" y="10"/>
				<Anchors>
					<Anchor point="BOTTOMRIGHT" x="3" y="-3"/>
				</Anchors>
				<HitRectInsets left="3" right="0" top="3" bottom="0" />
				<Layers>
					<Layer level="BACKGROUND">
						<Texture name="$parentTexture" parentKey="texture" file="Interface\AddOns\TellMeWhen\Textures\Resize">
							<Size x="10" y="10"/>
						</Texture>
					</Layer>
				</Layers>
				<Scripts>
					<OnLoad>
						self.texture:SetVertexColor(0.6, 0.6, 0.6)
					</OnLoad>
					<OnMouseDown>
						TMW:Group_StartSizing(self)
					</OnMouseDown>
					<OnMouseUp>
						TMW:Group_StopSizing(self)
					</OnMouseUp>
					<OnEnter>
						self.texture:SetVertexColor(1, 1, 1)
						if TMW.TT and not self.__title then
							TMW:TT(self, "RESIZE", "RESIZE_TOOLTIP")
							self:GetScript("OnEnter")(self)
						end
					</OnEnter>
					<OnLeave>
						self.texture:SetVertexColor(0.6, 0.6, 0.6)
					</OnLeave>
				</Scripts>
			</Button>
		</Frames>
	</Frame>

	<Button name="TellMeWhen_IconTemplate" virtual="true" enableMouse="true">
		<Size x="30" y="30"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="$parentIcon" parentKey="texture" file="Interface\Icons\INV_Misc_QuestionMark">
					<Size x="30" y="30"/>
				</Texture>
			</Layer>
			<Layer level="ARTWORK">
				<FontString name="$parentCount" parentKey="countText" inherits="NumberFontNormalSmall" justifyH="RIGHT">
					<Anchors>
						<Anchor point="BOTTOMRIGHT" x="-2" y="2"/>
					</Anchors>
				</FontString>
				<FontString name="$parentHotKey" parentKey="bindText" inherits="NumberFontNormalSmallGray" justifyH="RIGHT">
					<Anchors>
						<Anchor point="TOPLEFT" x="-2" y="-2"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Cooldown name="$parentCooldown" parentKey="cooldown" inherits="CooldownFrameTemplate">
				<Size x="30" y="30"/>
				<Anchors>
					<Anchor point="CENTER"/>
				</Anchors>
			</Cooldown>
		</Frames>
		<Scripts>
			<OnLoad>
				self:RegisterForDrag("LeftButton", "RightButton")
			</OnLoad>
			<OnEnter>
				self:SetScript("OnEnter", nil)
				self.__noWrapTooltipText = true
				TMW:TT(self, self.GetTooltipTitle, "ICON_TOOLTIP2NEW", 1, nil)
				self:GetScript("OnEnter")(self)
			</OnEnter>
			<OnMouseUp>
				if TMW.ID.isMoving then
					TMW:Group_StopMoving(TMW.ID.isMoving)
				end
				if button == "RightButton" then
					TMW.IE:Load(nil, self)
				end
				if TMW.IE then
					TMW.IE:ScheduleIconSetup(self)
				end
			</OnMouseUp>
			<OnMouseDown>
				local ID = TMW.ID
				if not ID then return end
				ID.DraggingInfo = nil
				ID.F:Hide()
				ID.IsDragging = nil
			</OnMouseDown>
			<OnDragStart>
				if button == "RightButton" and TMW.ID then
					TMW.ID:Start(self)
				elseif button == "LeftButton" then
					local group = self:GetParent()
					if not group.Locked then
						group:StartMoving()
						TMW.ID.isMoving = group
					end
				end
				if TMW.IE then
					TMW.IE:ScheduleIconSetup(self)
				end
			</OnDragStart>
			<OnReceiveDrag>
				if TMW.ID then
					TMW.ID:CompleteDrag("OnReceiveDrag", self)
					TMW.ID:SpellItemToIcon(self)
				end
			</OnReceiveDrag>
			<OnClick>
				if TMW.ID then
					TMW.ID:SpellItemToIcon(self)
				end
			</OnClick>
			<OnDragStop>
				if TMW.ID.isMoving then
					TMW:Group_StopMoving(TMW.ID.isMoving)
				end

				if TMW.ID and TMW.ID.IsDragging then
					TMW.ID:CompleteDrag("OnDragStop")
				end
			</OnDragStop>
			<OnShow>
				self.__shown = 1
			</OnShow>
			<OnHide>
				self.__shown = nil
			</OnHide>
		</Scripts>

		<NormalTexture file=""/>
		<HighlightTexture alphaMode="ADD" file="Interface\Buttons\ButtonHilight-Square"/>
		<PushedTexture file="Interface\Buttons\UI-Quickslot-Depress"/>
	</Button>

	<Button name="TellMeWhen_BarTemplate" virtual="true" enableMouse="true">
		<Size x="30" y="30"/>
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentCount" parentKey="countText" inherits="NumberFontNormalSmall" justifyH="RIGHT">
					<Anchors>
						<Anchor point="BOTTOMRIGHT" x="-2" y="2"/>
					</Anchors>
				</FontString>
				<FontString name="$parentHotKey" parentKey="bindText" inherits="NumberFontNormalSmallGray" justifyH="RIGHT">
					<Anchors>
						<Anchor point="TOPLEFT" x="-2" y="-2"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button name="$parentIconDisplay" parentKey="iconDisplay">
				<Size x="30" y="30"/>
				<Anchors>
					<Anchor point="TOPLEFT"/>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture name="$parentIcon" parentKey="texture" file="Interface\Icons\INV_Misc_QuestionMark">
							<Size x="30" y="30"/>
							<Anchors>
								<Anchor point="CENTER"/>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
				<Frames>
					<Cooldown name="$parentCooldown" parentKey="cooldown" inherits="CooldownFrameTemplate">
						<Size x="30" y="30"/>
						<Anchors>
							<Anchor point="CENTER"/>
						</Anchors>
					</Cooldown>
				</Frames>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				self:RegisterForDrag("LeftButton", "RightButton")
				self.cooldown = self.iconDisplay.cooldown
				self.texture = self.iconDisplay.texture
			</OnLoad>
			<OnEnter>
				self:SetScript("OnEnter", nil)
				self.__noWrapTooltipText = true
				TMW:TT(self, self.GetTooltipTitle, "ICON_TOOLTIP2NEW", 1, nil)
				self:GetScript("OnEnter")(self)
			</OnEnter>
			<OnMouseUp>
				if TMW.ID.isMoving then
					TMW:Group_StopMoving(TMW.ID.isMoving)
				end
				if button == "RightButton" then
					TMW.IE:Load(nil, self)
				end
				if TMW.IE then
					TMW.IE:ScheduleIconSetup(self)
				end
			</OnMouseUp>
			<OnMouseDown>
				local ID = TMW.ID
				if not ID then return end
				ID.DraggingInfo = nil
				ID.F:Hide()
				ID.IsDragging = nil
			</OnMouseDown>
			<OnDragStart>
				if button == "RightButton" and TMW.ID then
					TMW.ID:Start(self)
				elseif button == "LeftButton" then
					local group = self:GetParent()
					if not group.Locked then
						group:StartMoving()
						TMW.ID.isMoving = group
					end
				end
				if TMW.IE then
					TMW.IE:ScheduleIconSetup(self)
				end
			</OnDragStart>
			<OnReceiveDrag>
				if TMW.ID then
					TMW.ID:CompleteDrag("OnReceiveDrag", self)
					TMW.ID:SpellItemToIcon(self)
				end
			</OnReceiveDrag>
			<OnClick>
				if TMW.ID then
					TMW.ID:SpellItemToIcon(self)
				end
			</OnClick>
			<OnDragStop>
				if TMW.ID.isMoving then
					TMW:Group_StopMoving(TMW.ID.isMoving)
				end

				if TMW.ID and TMW.ID.IsDragging then
					TMW.ID:CompleteDrag("OnDragStop")
				end
			</OnDragStop>
			<OnShow>
				self.__shown = 1
			</OnShow>
			<OnHide>
				self.__shown = nil
			</OnHide>
		</Scripts>

		<NormalTexture file="">
			<Anchors>
				<Anchor point="TOPLEFT" relativeTo="$parentIconDisplay" relativePoint="TOPLEFT"/>
				<Anchor point="BOTTOMRIGHT" relativeTo="$parentIconDisplay" relativePoint="BOTTOMRIGHT"/>
			</Anchors>
		</NormalTexture>
		<HighlightTexture alphaMode="ADD" file="Interface\Buttons\ButtonHilight-Square">
			<Anchors>
				<Anchor point="TOPLEFT" relativeTo="$parentIconDisplay" relativePoint="TOPLEFT"/>
				<Anchor point="BOTTOMRIGHT" relativeTo="$parentIconDisplay" relativePoint="BOTTOMRIGHT"/>
			</Anchors>
		</HighlightTexture>
		<PushedTexture file="Interface\Buttons\UI-Quickslot-Depress">
			<Anchors>
				<Anchor point="TOPLEFT" relativeTo="$parentIconDisplay" relativePoint="TOPLEFT"/>
				<Anchor point="BOTTOMRIGHT" relativeTo="$parentIconDisplay" relativePoint="BOTTOMRIGHT"/>
			</Anchors>
		</PushedTexture>
	</Button>

	<!-- END TEMPLATES -->

	<Cooldown hidden="true">
		<!-- cooldown bug fixer.
		Seems to fix the long-standing bug once and for all where cooldown models would
		not show up until one was initiated somewhere outside a TMW icon -->
		<Scripts>
			<OnLoad>
				self:SetCooldown(GetTime(), 1)
			</OnLoad>
		</Scripts>
	</Cooldown>

	<Frame name="TellMeWhen_BlizzOptionsStub" hidden="true">
		<Scripts>
			<OnLoad>
				self.name = TMW.L["ICON_TOOLTIP1"]
				InterfaceOptions_AddCategory(self)
			</OnLoad>
			<OnShow>
				TMW:LoadOptions()
				InterfaceOptionsFrame_OpenToCategory(TMW.AddedToBlizz)
			</OnShow>
		</Scripts>
	</Frame>
</Ui>





<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ .. \FrameXML\UI.xsd">

	<!-- TEMPLATES -->
	
	
	<Button name="TellMeWhen_GroupTemplate_ResizeButton" parentKey="resizeButton" virtual="true">
		<Size x="10" y="10"/>
		<Anchors>
			<Anchor point="BOTTOMRIGHT" x="3" y="-3"/>
		</Anchors>
		<HitRectInsets left="3" right="0" top="3" bottom="0" />
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="texture" file="Interface\AddOns\TellMeWhen\Textures\Resize">
					<Size x="10" y="10"/>
				</Texture>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				self.texture:SetVertexColor(0.6, 0.6, 0.6)
			</OnLoad>
			<OnEnter>
				self.texture:SetVertexColor(1, 1, 1)
			</OnEnter>
			<OnLeave>
				self.texture:SetVertexColor(0.6, 0.6, 0.6)
			</OnLeave>
		</Scripts>
	</Button>
			
	<Frame name="TellMeWhen_GroupTemplate" enableMouse="false" toplevel="true" movable="true" parent="TMW" virtual="true">
		<Size x="1" y="1"/>
	</Frame>

	<Button name="TellMeWhen_IconTemplate" virtual="true" enableMouse="true">
		<Size x="30" y="30"/>

		<NormalTexture file=""/>
		<HighlightTexture alphaMode="ADD" file="Interface\Buttons\ButtonHilight-Square"/>
		<PushedTexture file="Interface\Buttons\UI-Quickslot-Depress"/>
	</Button>

	<!-- END TEMPLATES -->

	<Cooldown hidden="true">
		<!-- cooldown bug fixer.
		Seems to fix the long-standing bug once and for all where cooldown models would
		not show up until one was initiated somewhere outside a TMW icon.
		Don't ask why this works, because I don't have a clue. But, it does. So leave it alone.-->
		<Scripts>
			<OnLoad>
				self:SetCooldown(GetTime(), 1)
			</OnLoad>
		</Scripts>
	</Cooldown>

	<Frame name="TellMeWhen_BlizzOptionsStub" hidden="true">
		<Scripts>
			<OnLoad>
				self.name = TMW.L["ICON_TOOLTIP1"]
				InterfaceOptions_AddCategory(self)
			</OnLoad>
			<OnShow>
				TMW:LoadOptions()
				InterfaceOptionsFrame_OpenToCategory(TMW.AddedToBlizz)
			</OnShow>
		</Scripts>
	</Frame>
</Ui>




